<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F24fc0c3"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/camera_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Camera Settings"
        android:background="#388b8d"
        android:textSize="20dp"
        android:gravity="center"
        />

    <ScrollView
        android:layout_below="@+id/camera_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Photo"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:background="#449ea1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/settings_storagepath"
                android:layout_width="match_parent"
                android:text="Storage Path"
                android:textColor="#808080"
                android:textSize="16dp"
                android:onClick="clickStoragePath"
                android:padding="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Camera Resolution"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="#808080"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Capture"
                android:textColor="#ffffff"
                android:background="#449ea1"
                android:padding="10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Shutter sound"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <ToggleButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/toggle_selector"
                    android:textOff=""
                    android:textOn=""
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Geolocation"
                    android:textColor="#808080"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <ToggleButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/toggle_selector"
                    android:textOff=""
                    android:textOn=""
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Auto identify QRcode and barcode"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <ToggleButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:background="@drawable/toggle_selector"
                    android:textOff=""
                    android:textOn=""
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="Camera screen brightness"
                android:textSize="16dp"
                android:textColor="#808080"
                android:padding="10dp"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Composition along the grid lines"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <ToggleButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/toggle_selector"
                    android:textOff=""
                    android:textOn=""
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Facial recognition"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <ToggleButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/toggle_selector"
                    android:textOff=""
                    android:textOn=""
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Save face information photo"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <ToggleButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/toggle_selector"
                    android:textOff=""
                    android:textOn=""
                    />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:text="Video"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:background="#449ea1"
                android:padding="10dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:text="Bit rate"
                android:textSize="16dp"
                android:textColor="#808080"
                android:padding="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Advanced"
                android:textSize="16dp"
                android:background="#449ea1"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Touch the screen to take photos"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="10dp"
                    android:layout_height="wrap_content" />

                <ToggleButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/toggle_selector"
                    android:textOff=""
                    android:textOn=""
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="Timer picture"
                android:textSize="16dp"
                android:textColor="#808080"
                android:padding="10dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:text="Theme Color"
                android:textSize="16dp"
                android:textColor="#808080"
                android:padding="10dp"
                android:layout_height="wrap_content" />


            <Button
                android:layout_width="match_parent"
                android:text="Restore default"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
